                                                <div class="row mt-2">
                                                    <div class="col-md-12">
                                                        <label class="labels">الدولة</label>
                                                        <input type="text" class="form-control" name="EDIT2.country" placeholder="البلد" value="">
                                                    </div>
                                                </div>
                                                <div class="mt-5 text-center">
                                                    <button class="btn profile-button" type="submit" style="background-color: #89CFF0; color: white;">حفظ</button>
                                                </div>
                                            </div>
