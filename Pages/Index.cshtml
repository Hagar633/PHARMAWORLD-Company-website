    <div class="fashion_section">
        <div id="main_slider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @if (Model.Dt.Rows.Count > 0 || Model.Dt2.Rows.Count > 0 || Model.Dt3.Rows.Count > 0)
                {
                    var allRows = new List<DataRow>();
                    allRows.AddRange(Model.Dt.Rows.Cast<DataRow>());
                    allRows.AddRange(Model.Dt2.Rows.Cast<DataRow>());
                    allRows.AddRange(Model.Dt3.Rows.Cast<DataRow>());

                    for (int i = 0; i < allRows.Count; i += 3)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <div class="container">
                                <h1 class="fashion_taital">العروض والخصومات</h1>
                                <div class="fashion_section_2">
                                    <div class="row">
                                        @for (int j = i; j < i + 3 && j < allRows.Count; j++)
                                        {
                                            var row = allRows[j];
                                            <div class="col-lg-4 col-sm-4">
                                                <div class="box_main">
                                                    <h4 class="shirt_text">@row["NAME"]</h4>
                                                    <p class="price_text">السعر <span style="color: #262626;">@row["PRICE"]</span></p>
                                                    <div class="tshirt_img">
                                                        <img src="images/women-clothes-img.png">
                                                    </div>
                                                    <div class="btn_main">
                                                        <!-- Button or additional actions can go here -->
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            <!-- Carousel controls -->
            <a class="carousel-control-prev" href="#main_slider" role="button" data-slide="prev">
                <i class="fa fa-angle-left"></i>
            </a>
            <a class="carousel-control-next" href="#main_slider" role="button" data-slide="next">
                <i class="fa fa-angle-right"></i>
            </a>
        </div>
    </div>


   


