    <div id="addProductForm" class="form-container d-none">
        <button class="btn-close" id="closeForm" aria-label="Close">&times;</button>
        <h5>إضافة منتج جديد</h5>
        <form method="post" asp-page-handler="Edit">
            <div class="mb-3">
                <label for="productName" class="form-label">اسم المنتج</label>
                <input type="text" class="form-control" id="productName" name="pname" placeholder="أدخل اسم المنتج" required>
            </div>
            <div class="mb-3">
                <label for="productType" class="form-label">نوع المنتج</label>
                <input type="text" class="form-control" id="productType" name="ptype" placeholder="أدخل نوع المنتج" required>
            </div>
            <div class="mb-3">
                <label for="expiryDate" class="form-label">تاريخ الانتهاء</label>
                <input type="date" class="form-control" id="expiryDate" name="expdate" required>
            </div>
            <div class="mb-3">
                <label for="sellprice" class="form-label">سعر البيع</label>
                <input type="number" class="form-control" id="sellprice" name="sellprice" placeholder="أدخل سعر البيع" required>
            </div>
            <div class="mb-3">
                <label for="buyprice" class="form-label">سعر الشراء</label>
                <input type="number" class="form-control" id="buyprice" name="buyprice" placeholder="أدخل سعر الشراء" required>
            </div>
            <div class="mb-3">
                <label for="amount" class="form-label">الكمية</label>
                <input type="number" class="form-control" id="amount" name="amount" placeholder="أدخل الكمية" required>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">الوصف</label>
                <textarea class="form-control" id="description" name="desc" rows="3" placeholder="أدخل وصف المنتج"></textarea>
            </div>


            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">حفظ المنتج</button>
            </div>
        </form>
    </div>

    <section class="intro">
        <div class="bg-image h-100">
            <div class="mask d-flex align-items-center h-100">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-12 table-container">
                            <div class="card shadow-2-strong">
                                <div class="card-body">
                                    <h4 class="text-center mb-4">جدول المنتجات </h4>
                                    <div class="table-responsive">
                                        <table class="table table-hover table-borderless mb-0">
                                            <thead class="text-center">
                                                <tr>
                                                    <th scope="col">اسم المنتج</th>
                                                    <th scope="col">رقم المنتج</th>
                                                    <th scope="col"> نوع المنتج</th>
                                                    <th scope="col">تاريخ الانتهاء </th>
                                                    <th scope="col">سعر البيع </th>
                                                    <th scope="col">سعر الشراء </th>
                                                    <th scope="col">الوصف </th>
                                                    <th scope="col">الكميه</th>
                                                    <th scope="col" class="actions-col">الإجراءات</th>
                                                </tr>
                                            </thead>
                                            <tbody class="text-center align-middle">
