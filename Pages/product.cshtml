                                                        <td>@row["pname"]</td>
                                                        <td>@row["ID"]</td>
                                                        <td>@row["ptype"]</td>
                                                        <td>@row["expdate"]</td>
                                                        <td>@row["sellprice"]</td>
                                                        <td>@row["buyprice"]</td>
                                                        <td>@row["descrep"]</td>
                                                        <td>@row["amount"]</td>
                                                        <td>
                                                         <form method="post">
                                                                <input type="hidden" name="id" value="@row["ID"]" />
                                                                <button type="submit" formaction="?handler=Delete" class="btn btn-delete btn-sm">حذف</button>
                                                            </form>
                                                        </td>

                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="add-button">
