    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
       
                body {
            background-color: #e3f2fd; /* Light blue background */
            direction: rtl;
        }

        .intro {
            padding-top: 30px;
        }

        .card {
            background-color: #ffffff;
            border: none;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }

        .table-container {
            max-width: 100%;
            margin: auto;
        }

        .table thead th {
            background-color: #0d47a1; /* Dark blue for header */
            color: #ffffff;
            border-bottom: 2px solid #0a3d91;
        }

        .table tbody tr {
            transition: background-color 0.2s;
        }

            .table tbody tr:nth-child(even) {
                background-color: #e1f5fe; /* Very light blue for even rows */
            }

            .table tbody tr:hover {
                background-color: #bbdefb; /* Light blue on hover */
            }

        .actions-col {
            white-space: nowrap;
            width: 1%;
        }

        .btn {
            font-size: 0.85rem;
            padding: 0.3rem 0.6rem;
            display: inline-block;
        }

        .btn-success {
            background-color: #0277bd; /* Blue for Accept button */
            border-color: #0277bd;
        }

        .btn-danger {
            background-color: #b71c1c; /* Red for Reject button */
            border-color: #b71c1c;
        }

        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            right: 0;
            background-color: #111;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
        }

            .sidenav a {
                padding: 8px 8px 8px 32px;
                text-decoration: none;
                font-size: 25px;
                color: #818181;
                display: block;
                transition: 0.3s;
            }

                .sidenav a:hover {
                    color: #f1f1f1;
                }

            .sidenav .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 36px;
                margin-right: 50px;
            }

        .toggle_icon {
            cursor: pointer;
        }

            .toggle_icon img {
                width: 30px;
            }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

